<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NJPlayMobile.Pages.ConnectPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical" VerticalOptions="Start">
                <StackLayout>
                    <Label Text="Endereço IP do servidor:"/>
                    <Entry x:Name="sIP" Placeholder="IP" Margin="0,-10,0,0"/>
                </StackLayout>
                <StackLayout>
                    <Label Text="Porta do servidor:" Margin ="0,10,0,0"/>
                    <Entry x:Name="sPort" Placeholder="Porta" Margin="0,-10,0,0"/>
                </StackLayout>
            </StackLayout>

            <StackLayout VerticalOptions="CenterAndExpand">
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
                <Button Text="Connect to NJPlay Server" x:Name="bConnect"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>